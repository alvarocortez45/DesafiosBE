h1(class="display-6 mb-5") Agregar Productos


form(action="/productos" method="post")
    div(class="row g-3")
        div(class="col-12 col-sm-12 col-md-6 col-lg-6")
            input(type="text" required class="form-control" placeholder="Nombre*" name="title")
        div(class="col-12 col-sm-12 col-md-6 col-lg-6")
            input(type="number" required class="form-control" placeholder="Precio*" name="price")
        div(class="col-12 col-sm-12 col-md-6 col-lg-6")
            input(type="url" required class="form-control" placeholder="URL foto*" name="url")        
        
        div(class="col-12 col-sm-12 col-md-6 col-lg-6")
            button(type="submit" class="btn btn-success") Guardar