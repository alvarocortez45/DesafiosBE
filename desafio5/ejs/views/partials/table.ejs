<h1 class="display-6" style="margin: 3rem;">LISTADO DE PRODUCTOS</h1>


<a href="/" class="btn btn-primary">Nuevo producto</a>


<div class="mt-3">
    <% if (productos.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto de producto</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < productos.length; i++) { %>
                    <tr>
                        <th scope="row"><%=productos[i].id%></th>
                        <td><%=productos[i].title%></td>
                        <td><%=productos[i].price%></td>
                        <td><img src="<%=productos[i].thumbnail%>" alt="<%=productos[i].title%>" width="30"></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    <% }else{ %>
        <div class="alert alert-warning" role="alert">
            Lista de productos vac√≠a
        </div>
    <% } %>
</div>


<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="/productos" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <li class="page-item active"><a class="page-link" href="/productos">1</a></li>
        <li class="page-item"><a class="page-link" href="/productos">2</a></li>
